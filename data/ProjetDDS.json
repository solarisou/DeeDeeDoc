        "idEntreprise": "ent123"
    },



    {
        "$Schema" : "https://json-schema.org/draft/2020-12/schema",
        "title" : "Ajout de l'entreprise …",
        "description" : "Message de l'ajout d'une entreprise à tout le consortium (Entreprise à Entreprise)",
        "type" : "object",
        "properties" : {
            "idEntreprise" : {
                "type" : "string",
                "description" : "IdEntreprise à ajouter"
            },
            "nomEntreprise" : {
                "type" : "string",
                "description" : "Nom de l'entreprise à ajouter"
            }
        },
        "required" : ["idEntreprise", "nomEntreprise"]
    },

    {
        "idEntreprise": "ent123",
        "nomEntreprise": "Entreprise XYZ"
    },


    {
        "$Schema" : "https://json-schema.org/draft/2020-12/schema",
        "title" : "Suppression d'un candidat",
        "description" : "Message de supression d'un candidat (Entreprise à Entreprise)",
        "type" : "object",
        "properties" : {
            "idCandidature" : {
                "type" : "string",
                "description" : "L'id du candidat dont les informations doivent être supprimer "
            }
        },
        "required" : ["idCandidature"]
    },

    {
        "idCandidature": "cand123"
    },



    {
        "$Schema" : "https://json-schema.org/draft/2020-12/schema",
        "title" : "Réponse d'un candidat",
        "description" : "Message de réponse a la demande du candidat (Entreprise à Candidat",
        "type" : "object",
        "properties" : {
            "idCandidature" : {
                "type" : "string",
                "description" : "L'id du candidat"
            },
            "reponse" : {
                "statut" : {
                    "type" : "string",
                    "enum" : ["O", "N","Autre"]
                },
                "description" : "La réponse du candidat (accepte ou refuse)"
            },
            "commentaire" : {
                "type" : "string",
                "description" : "Le commentaire a ajouter dans le mail pour par exemple ajouter des informations"
            },
            "intitulePoste" : {
                "type" : "string",
                "description" : "L'intitulé du poste visé par le candidat"
            },
            "dateDecision" : {
                "type" : "string",
                "description" : "La date de la décision du candidat"
            },
        "required" : ["idCandidature", "reponse","dateDecision"]
        }
    },

    {
        "idCandidature": "cand123",
        "reponse": "O",
        "commentaire": "Nous somme très interesé par votre profil.",
        "intitulePoste": "Développeur"
    },



    {
        "$Schema" : "https://json-schema.org/draft/2020-12/schema",
        "title" : "Renouvellement de l'accord de partage d'information au consortium",
        "description" : "Message de renouvellement de l'accord de partage d'information au consortium (Entreprise à Candidat)",
        "type" : "object",
        "properties" : {
            "idCandidature" : {
                "type" : "string",
                "description" : "idCandidature"
            },
            "accord" : {
                "type" : "string",
                "enum" : ["O", "N"],
                "description" : "Accord de partage d'information au consortium"
            }
        },
        "required" : ["idCandidature", "accord"]
    },

    {
        "idCandidature": "cand123",
        "accord": "O"
    }
]

